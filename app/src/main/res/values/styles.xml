<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="voucher">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/voucher_bg</item>
        <item name="android:color">@color/voucher_bg</item>
        <item name="android:padding">2dp</item>

    </style>

    <style name="voucher.text">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/voucher_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="voucher.text.images">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="tint">@color/voucher_icon_tint</item>
    </style>


    <style name="search_view">
        <item name="android:background">@drawable/search_view_bg</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_view_hint_text</item>
        <item name="android:drawableStart">@drawable/ic_search_magnifier</item>
    </style>


    <style name="restaurant">

        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="restaurant.name" parent="heading">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="restaurant.name.subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/search_bg</item>
        <item name="android:fontFamily">sans-serif-condensed</item>

    </style>


    <style name="restaurant.chip" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="android:checkable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="chipCornerRadius">0dp</item>
        <item name="chipMinHeight">20dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="android:textColor">@color/primary</item>


    </style>

    <style name="restaurant.additional_offer">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/offer_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="heading">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="heading.viewAll">
        <item name="android:textColor">@color/secondary_button</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">14sp</item>

        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="offer_collection"></style>

    <style name="offer_collection.item_thumbnail">
        <!--Used 3:5 ratio-->
        <item name="android:layout_width">108dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="offer_collection.item_title">
        <item name="android:textColor">@color/item_title</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>